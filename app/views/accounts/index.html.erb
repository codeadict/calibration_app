<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Acc no</th>
    <th>Customer name</th>
    <th>Address 1</th>
    <th>Address 2</th>
    <th>City</th>
    <th>Postcode</th>
    <th>Contact name</th>
    <th>Phone</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= account.acc_no %></td>
    <td><%= account.customer_name %></td>
    <td><%= account.address_1 %></td>
    <td><%= account.address_2 %></td>
    <td><%= account.city %></td>
    <td><%= account.postcode %></td>
    <td><%= account.contact_name %></td>
    <td><%= account.phone %></td>
    <td><%= account.email %></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_account_path(account) %></td>
    <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

